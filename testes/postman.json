	"item": [
		{
			"name": "AUTH – Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Login retornou 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"let json = pm.response.json();",
							"pm.environment.set(\"token\", json.token);",
							"pm.environment.set(\"user-id\", json.UserId);",
							"console.log(\"Token salvo:\", json.token);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"123456\"\n}"
				},
				"url": {
					"raw": "{{url-auth}}/login",
					"host": [
						"{{url-auth}}"
					],
					"path": [
						"login"
					]
				}
			},
			"response": []
		},
